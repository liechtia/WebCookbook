@using WebCookbook.Models
@model WebCookbook.Models.RecipeViewModel

<script src="/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "RecipeView", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
        Html.RenderPartial("EditCreatePartial", Model);
        
         <div>
            <img src=@Model.Recipe.PictureUrl style="max-width: 200px; width: 100%;" />
        </div>
        <div>
           @Html.CheckBox("deleteImage")
           Delete image
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}