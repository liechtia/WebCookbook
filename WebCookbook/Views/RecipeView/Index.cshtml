@using WebCookbook.Models
@using WebCookbook.Authorization
@model IEnumerable<WebCookbook.Models.Recipe>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @{
        if (User.Identity.IsAuthenticated)
        {
            @Html.ActionLink("Create New", "Create", "RecipeView");
        }
        else
        {
        <p>Please log in to create a recipe!</p>
        }
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InitialServings)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instructions)
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InitialServings)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Instructions)
        </td>
        <td>
            @if (StaticAuthorize.isAuthorized(item.RecipeId, User))
            {
            @Html.ActionLink("Edit", "Edit", "RecipeView", new { id = item.RecipeId }, Model) <text>|</text>
            }
            @Html.ActionLink("Details", "Details", "RecipeView", new { id=item.RecipeId }, null) 
            @if (StaticAuthorize.isAuthorized(item.RecipeId,User))
            {
            <text>|</text> @Html.ActionLink("Delete", "Delete", "RecipeView", new { id = item.RecipeId }, null)
            }
        </td>
    </tr>
}

</table>
