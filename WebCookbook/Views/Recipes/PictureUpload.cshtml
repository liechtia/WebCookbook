@model WebCookbook.Models.Recipe

@{
    ViewBag.Title = "PictureUpload";
}

<h2>PictureUpload</h2>

@using (Html.BeginForm("PictureUpload", "Recipes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.RecipeId)
    <input type="file" name="file" />
    <input type="submit" value="OK" />
}

<div>
    @Html.ActionLink("Back to List","Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
